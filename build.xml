<project name="whiley" default="stdlib">  
  <property name="version" value="0.2.9"/>

  <target name="compile">
    <javac debug="true" srcdir="." includeantruntime="true" includes="wyjc/**,wyone/**,wyjvm/**" excludes="wyjc/testing/**,wyone/testing/**"/> 
  </target>

  <target name="build-wyjc" depends="compile">
    <buildnumber file="build.num"/>
    <mkdir dir="tmp"/>
    <manifest file="tmp/MANIFEST.MF">
      <attribute name="Built-By" value="${user.name}"/>
      <attribute name="Main-Class" value="wyjc.Main"/>
      <attribute name="Implementation-Version" value="${version}-${build.number}"/>
    </manifest>
    <jar destfile="lib/wyjc.jar" basedir="." includes="wyjc/**/*.class,wyone/**/*.class,wyjvm/**/*.class" manifest="tmp/MANIFEST.MF"/>
    <delete dir="tmp"/>
  </target>

  <target name="stdlib" depends="build-wyjc">
    <taskdef name="wyjc" classname="wyjc.util.AntTask" classpath="lib/wyjc.jar"/>
    <wyjc srcdir="stdlib" includes="whiley/**/*.whiley" excludes="whiley/io/**" nvc="true"/>
    <jar destfile="lib/wyrt.jar">
      <fileset dir="." includes="wyjc/jvm/rt**/*.class"/>
      <fileset dir="stdlib" includes="whiley/**/*.class"/>
    </jar>
  </target>

  <target name="distjar" depends="stdlib">
    <mkdir dir="tmp"/>
    <manifest file="tmp/MANIFEST.MF">
      <attribute name="Built-By" value="${user.name}"/>
      <attribute name="Main-Class" value="wyjc.Main"/>
      <attribute name="Implementation-Version" value="${version}-${build.number}"/>
      <attribute name="Implementation-Title" value="wyjc-v${version}.jar"/>
    </manifest>
    <jar destfile="wyjc-v${version}.jar" manifest="tmp/MANIFEST.MF">
      <fileset dir="." includes="wyjc/**/*.class,wyone/**/*.class,wyjvm/**/*.class"/>
      <fileset dir="stdlib" includes="whiley/**/*.class"/>
    </jar>
    <delete dir="tmp"/>
  </target>

  <target name="distsrc" depends="stdlib">
  <tar destfile="wdk-src-v${version}.tar" longfile="gnu">  
    <tarfileset dir="." includes="wyjc/**/*.java,wyjvm/**/*.java,wyone/**/*.java"/>
    <tarfileset dir="." includes="tests/**/*.whiley,tests/**/*.sysout"/>
    <tarfileset dir="." includes="examples/**/*.whiley"/>
    <tarfileset dir="." includes="stdlib/**/*.whiley"/>
    <tarfileset dir="." filemode="755">
      <include name="bin/wyjc"/>
      <include name="bin/whiley"/>
    </tarfileset>
    <tarfileset dir="." includes="LICENSE,README,build.xml"/>
    <tarfileset dir="." includes="lib/wyrt.jar,lib/wyjc.jar"/>
  </tar>
  <gzip destfile="wdk-src-v${version}.tgz" src="wdk-src-v${version}.tar"/>
  <delete file="wdk-src-v${version}.tar"/>
  </target>

  <target name="dist" depends="distsrc,distjar">
  </target>

  <target name="doc">
    <javadoc
       packagenames="wyjc.*,wyone.*,wyjvm.*"
       sourcepath="."
       destdir="docs/api"
       author="true"
       version="true"
       use="true"
       windowtitle="Whiley API">
      <doctitle><![CDATA[<h1>The Whiley Programming Language</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 2010 David J. Pearce. All Rights Reserved.</i>]]></bottom>
      </javadoc>
  </target>

 <target name="clean">
  <delete includeEmptyDirs="true" failonerror="false">
   <fileset file="lib/*.jar"/>
   <fileset file="*.jar"/>
   <fileset file="*.tgz"/>
   <fileset dir="." includes="**/*.class"/>
   <fileset dir="tmp/" includes="**"/>
  </delete>
 </target>

</project>
