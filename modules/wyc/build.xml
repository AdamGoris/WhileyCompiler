<project name="wyc" default="build">  

  <target name="compile">
    <echo message="${ant.project.name}"/>
    <javac debug="true" debuglevel="vars,lines,source" includeantruntime="true" includes="*/**" classpath="../wyil/src"> 
      <src path="src"/>
    </javac>
  </target>

  <target name="build" depends="compile">
    <echo message="${ant.project.name}"/>
    <jar destfile="../../lib/wyc-${version}.jar">
      <fileset dir="src" includes="*/**/*.class"/>
    </jar>
  </target>
  
  <target name="doc">
    <javadoc
       packagenames="wyc.*"
       sourcepath="src/"
       destdir="../../docs/wyc/api"
       author="true"
       version="true"
       use="true"
       windowtitle="Whiley Compiler API">
      <doctitle><![CDATA[<h1>The Whiley-2-Java Compiler (v${version})</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 2011 David J. Pearce. All Rights Reserved.</i>]]></bottom>
      </javadoc>
  </target>

 <target name="clean">
   <echo message="${ant.project.name}"/>
   <delete includeEmptyDirs="true" failonerror="false">
     <fileset dir="." includes="**/*.class,**/*.wyil,**/*.wyasm"/>
   </delete>
 </target>

</project>
