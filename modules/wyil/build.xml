<project name="wyil" default="build">
  <import file="../../config.xml"/>  

  <target name="compile">
    <echo message="${ant.project.name}"/>
    <javac debug="true" debuglevel="vars,lines,source" includeantruntime="true" includes="*/**" excludes="wyil/testing/**,wyone/testing/**"> 
      <src path="src"/>
    </javac>
  </target>

  <target name="build" depends="compile">
    <echo message="${ant.project.name}"/>
    <jar destfile="../../lib/wyil-v${version}.jar">
      <fileset dir="src" includes="*/**/*.class"/>
    </jar>
  </target>
  
  <target name="doc">
    <javadoc
       packagenames="wybs.*,wyil.*,wyone.*,wyautl.*"
       excludepackagenames="wyil.testing.*,wyone..*"
       sourcepath="src/"
       destdir="../../docs/wyil/api"
       author="true"
       version="true"
       use="true"
       windowtitle="Whiley Internmediate Language (WYIL) API">
      <doctitle><![CDATA[<h1>The Whiley Programming Language (v${version})</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 2011 David J. Pearce. All Rights Reserved.</i>]]></bottom>
      </javadoc>
  </target>

 <target name="clean">
   <echo message="${ant.project.name}"/>
   <delete includeEmptyDirs="true" failonerror="false">
     <fileset dir="." includes="**/*.class,**/*.wyil,**/*.wyasm"/>
   </delete>
 </target>

</project>
